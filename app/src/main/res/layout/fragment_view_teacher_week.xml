<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/grey_blank"
    android:padding="@dimen/dp_5"
    tools:context=".presentation.recyclerView.fragmentViewTeacherWeek">

    <TextView
        android:id="@+id/name_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/name_subject"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@id/name_teacher"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/name_teacher"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/date"
        app:layout_constraintStart_toEndOf="@id/name_subject"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/date"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/image_setting"
        app:layout_constraintStart_toEndOf="@id/name_teacher"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_setting"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:contentDescription="@string/hello_moto"
        android:fontFamily="@font/poppins_bold"
        android:src="@drawable/ic_more"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teacher_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/name_auditoria"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/teacher_phone_number"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_subject" />

    <TextView
        android:id="@+id/teacher_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/name_classroom"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/name_day_week"
        app:layout_constraintStart_toEndOf="@id/teacher_age"
        app:layout_constraintTop_toBottomOf="@id/name_teacher" />

    <TextView
        android:id="@+id/name_day_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/Monday"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/teacher_phone_number"
        app:layout_constraintTop_toBottomOf="@id/date" />

</androidx.constraintlayout.widget.ConstraintLayout>